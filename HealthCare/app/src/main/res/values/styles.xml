<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/green</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/green</item>
    </style>
<style name="NumberPickerTheme" parent="Theme.AppCompat.Light">
    <item name="colorAccent">@color/bg_layer_3</item>
    <item name="colorControlNormal">@color/text_color</item>
    <item name="android:textColorPrimary">@color/text_color</item>
    <item name="android:background">@color/bg_layer_3</item>
    <item name="android:textSize">24sp</item>
</style>
    <style name="DrawerTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textSize">15sp</item> <!-- menu item text size-->
        <item name="android:listPreferredItemHeightSmall">40dp</item><!-- menu item height-->
    </style>
</resources>
